<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".heado_title"), root_path, id: "logo" %>
    <nav>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
      </div>

      <div class="collapse navbar-collapse" id="navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t(".head_home"), root_path %></li>
          <li><%= link_to t(".head_help"), help_path %></li>
          <% if logged_in? %>
            <li><%= link_to t(".head_user"), users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t(".head_account") %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(".head_profile"), current_user %></li>
                <li><%= link_to t(".head_settings"), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(".head_logout"), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t(".head_login"), login_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
